<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <artifactId>inetsense-tools</artifactId>
    <packaging>pom</packaging>

    <parent>
        <groupId>hu.elte.inetsense</groupId>
        <artifactId>inetsense</artifactId>
        <version>${inetsense.version}</version>
    </parent>


    <dependencies>
        <dependency>
            <groupId>hu.elte.inetsense</groupId>
            <artifactId>inetsense-probe-desktop</artifactId>
            <version>${inetsense.version}</version>
        </dependency>
        <dependency>
            <groupId>hu.elte.inetsense</groupId>
            <artifactId>inetsense-server-collector</artifactId>
            <version>${inetsense.version}</version>
        </dependency>
        <dependency>
            <groupId>hu.elte.inetsense</groupId>
            <artifactId>inetsense-server-upload</artifactId>
            <version>${inetsense.version}</version>
        </dependency>
        <dependency>
            <groupId>hu.elte.inetsense</groupId>
            <artifactId>inetsense-server-web</artifactId>
            <version>${inetsense.version}</version>
        </dependency>
        <dependency>
            <groupId>hu.elte.inetsense</groupId>
            <artifactId>inetsense-server-clock</artifactId>
            <version>${inetsense.version}</version>
        </dependency>
    </dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>2.10</version>
				<executions>
				  <execution>
					<id>copy-dependencies</id>
					<phase>package</phase>
					<goals>
					  <goal>copy-dependencies</goal>
					</goals>
					<configuration>
					  <outputDirectory>${project.build.directory}/dist</outputDirectory>
					  <overWriteReleases>false</overWriteReleases>
					  <overWriteSnapshots>true</overWriteSnapshots>
					  <excludeTransitive>true</excludeTransitive>
					</configuration>
				  </execution>
				</executions>
			</plugin>
		  
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<version>3.0.1</version>
				<executions>
					<execution>
						<id>copy-scripts</id>
						<phase>validate</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.directory}/scripts</outputDirectory>
							<resources>          
								<resource>
									<directory>src/main/resources/scripts</directory>
									<filtering>true</filtering>
								</resource>
							</resources>              
						</configuration>            
					</execution>
					<execution>
						<id>copy-config</id>
						<phase>validate</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.directory}/dist/config</outputDirectory>
							<resources>          
								<resource>
									<directory>src/main/resources/config</directory>
									<filtering>true</filtering>
								</resource>
							</resources>              
						</configuration>            
					</execution>
				</executions>
			</plugin>
		</plugins>
  </build>
  
</project>
